{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true
		},
		"ignore": ["**/node_modules/**", "**/dist/**"]
	},
	"formatter": {
		"enabled": true,
		"ignore": ["**/node_modules/**", "**/dist/**"]
	},
	"javascript": {
		"globals": ["$", "_", "describe", "it", "expect"]
	}
}
